{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*",
		"example/*",
		"docs"
	],
	"scripts": {
		"example": "npm-run-all --parallel start:*",
		"example:master": "yarn workspace cra-friday-master start",
		"example:slave": "yarn workspace cra-friday-slave start",
		"example:slave2": "yarn workspace cra-friday-slave2 start",
		"dev": "lerna exec --scope friday-core yarn watch --stream",
		"test": "jest --coverage",
		"test:watch": "jest --runInBand --coverage --watch --verbose false --detectOpenHandles",
		"build": "npm-run-all --parallel build:*",
		"build:tsPackage": "tsc -b packages/tsconfig.json",
		"update": "jest test && yarn build && lerna publish",
		"clean": "lerna clean --yes",
		"prettier": "prettier --write ./packages"
	},
	"dependencies": {
		"@types/warning": "^3.0.0",
		"invariant": "^2.2.4",
		"jest": "^26.2.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-test-renderer": "^17.0.1",
		"ts-jest": "^26.1.4",
		"typescript": "^4.0.5",
		"warning": "^4.0.3"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^11.2.2",
		"@testing-library/react-hooks": "^3.4.1",
		"@testing-library/user-event": "^7.2.1",
		"@types/invariant": "^2.2.33",
		"@types/jest": "^26.0.10",
		"@types/react": "^16.9.41",
		"@types/react-dom": "^16.9.8",
		"@typescript-eslint/eslint-plugin": "^4.13.0",
		"@typescript-eslint/parser": "^4.13.0",
		"eslint": "^7.17.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.22.0",
		"lerna": "^3.16.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1"
	},
	"resolutions": {
		"jest-environment-jsdom": "^26.0.1"
	}
}
